<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/backgroungcolor">
    <RelativeLayout
        android:id="@+id/add_relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/bule" >

        <Button
            android:id="@+id/add_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/edit_newlead"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/add_button_edit_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:text="@string/last_step"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/add_button_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="@string/save" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_relativeLayout1" 
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_newlead_step1_f"/>
         <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        

        <TextView
            android:id="@+id/add_textView_studengtmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stu_information" 
            android:textColor="@color/bule"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/add_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_newlead_step_line_f"
 />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/add_imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_newlead_step2_f" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_information" 
            android:textColor="@color/red"/>

    </LinearLayout>
<RelativeLayout
        android:id="@+id/add_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/add_linearLayout1"
        android:background="@color/white" 
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/add_textView1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/add_linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_textView1"
            android:background="@drawable/btn_seg_active_tab_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/parent_name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_editText_edit_jzxm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:layout_weight="1"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/add_imageView_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_delete_enter"
                android:visibility="gone"  
                android:layout_marginRight="15dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/add_textView3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_linearLayout1"
            android:layout_marginLeft="15dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/add_linearLayout_phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_textView3"
            android:background="@drawable/btn_seg_active_tab_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/parent_phone"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_editText_edit_jz_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:textSize="16sp"
                android:layout_weight="1" />
             <ImageView
                android:id="@+id/add_imageView_jz_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_delete_enter"
                android:visibility="gone"  
                android:layout_marginRight="15dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/add_textView4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_linearLayout_phone"
            android:layout_marginLeft="15dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/add_linearLayout_edit_zt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_textView4"
            android:background="@drawable/btn_seg_active_tab_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/status"
                android:layout_weight="1"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/add_textView_edit_zt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/gray"
                android:gravity="right"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/add_imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_next"
                android:layout_marginRight="15dp" />
           
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/add_textView5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_linearLayout_edit_zt"
            android:layout_marginLeft="15dp"
            android:background="@color/gray" />
        <LinearLayout
            android:id="@+id/add_linearLayout_edit_contactdate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_textView5"
            android:background="@drawable/btn_seg_active_tab_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/reservation_date"
                android:textSize="16sp" 
               />
            
            <TextView
                android:id="@+id/add_textView_edit_contactdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:layout_marginRight="33dp"
                android:textColor="@color/gray"
                />
            
        </LinearLayout>
          <TextView
            android:id="@+id/add_textView6"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_linearLayout_edit_contactdate"
            android:layout_marginLeft="15dp"
            android:background="@color/gray" />
          
        <LinearLayout
            android:id="@+id/add_linearLayout_edit_source"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_textView6"
            android:background="@drawable/btn_seg_active_tab_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/source"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/add_textView_edit_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/gray"
                android:gravity="right" 
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/add_imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_next"
                android:layout_marginRight="15dp" />
                     
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/add_linearLayout_edit_source"
            android:background="@color/gray"/>
    </RelativeLayout>
</RelativeLayout>
