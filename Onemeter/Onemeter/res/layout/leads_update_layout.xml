<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroungcolor" >

    <RelativeLayout
        android:id="@+id/new_relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/bule" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:text="@string/update_leads_and_dynamic"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/new_button_update_dimiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/new_button_update_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="@string/save"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/new_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/new_relativeLayout1"
        android:layout_centerHorizontal="true"
        android:background="@color/backgroungcolor"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lead" />

        <TextView
            android:id="@+id/new_textView_update_stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
<Button
        android:id="@+id/new_button5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/new_linearLayout1"
        android:background="@color/gray" />
<RelativeLayout 
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"
        android:background="@color/white"
        android:layout_below="@+id/new_button5">
    <LinearLayout
        android:id="@+id/new_linearLayout_update_state"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/status"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/new_textView_update_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text=""
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/new_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_next" />
    </LinearLayout>

    <Button
        android:id="@+id/new_button1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/new_linearLayout_update_state"
        android:layout_marginLeft="15dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/new_linearLayout_gx_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/new_button1"
        android:gravity="center_vertical" 
        android:background="@color/white">

        <TextView
            android:id="@+id/new_textView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/update_date" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/new_textView_gx_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text=""
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="@color/gray" />
    </LinearLayout>

    <Button
        android:id="@+id/new_button2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/new_linearLayout_gx_date"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/new_linearLayout_gx_dynamic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/new_button2"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical" 
        android:background="@color/white"
        >

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/new_textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/new_dynamic" 
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/new_editText_update_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:textSize="16sp"
            android:cursorVisible="false"
            android:background="@color/white"
            android:layout_marginRight="30dp"/>

    </LinearLayout>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout3"
        android:background="@color/gray" />

</RelativeLayout>