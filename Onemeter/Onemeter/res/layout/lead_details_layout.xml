            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView_details_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="失效"
            android:textSize="16sp"
            android:textColor="@color/gray" />
    </LinearLayout>
    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/gray" />
    <LinearLayout
        android:id="@+id/linearLayout_details_yuyue_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="@string/reservation_date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_details_yuyue_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="2015-10-10"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/gray" />
     <LinearLayout
        android:id="@+id/linearLayout_details_source"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="@string/source" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView_details_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="一米智联"
            android:textSize="16sp"
            android:textColor="@color/gray" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/gray" />
     <LinearLayout
        android:id="@+id/linearLayout_details_add_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="@string/add_date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_details_add_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="2015-10-10"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
        </LinearLayout>
        
    </ScrollView>
   
</RelativeLayout>